rm -rf results.xcresult
rm -rf screenshots
xcodebuild -workspace ActionStatus.xcworkspace -scheme ActionStatus-macOS test -resultBundlePath ./results.xcresult -includeScreenshots | xcpretty
xcparse screenshots --os results.xcresult/ screenshots/
open screenshots
