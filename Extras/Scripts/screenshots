rm -rf .build/tests/results.xcresult
rm -rf .build/tests/screenshots
xcodebuild -workspace ActionStatus.xcworkspace -scheme ActionStatus-macOS test -resultBundlePath .build/tests/results.xcresult -includeScreenshots | xcpretty
xcparse screenshots --os .build/tests/results.xcresult/ .build/tests/screenshots/
open .build/tests/screenshots
