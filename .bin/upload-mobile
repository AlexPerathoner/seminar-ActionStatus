set -e
rm -rf .build
source make-tools 2> /dev/null

echo "*************"
echo "Uploading iOS  "
echo "*************"

rt set scheme ActionStatus-iOS --platform=iOS
rt archive --platform=iOS --show-output | xcpretty
rt export --platform=iOS
rt upload --platform=iOS

echo "**************"
echo "Uploading tvOS"
echo "**************"

rt set scheme ActionStatus-tvOS --platform=tvOS
rt archive --platform=tvOS --show-output | xcpretty
rt export --platform=tvOS
rt upload --platform=tvOS
