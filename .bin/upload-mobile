set -e
rm -rf .build
source make-tools 2> /dev/null

echo "*************"
echo "Uploading iOS  "
echo "*************"

rt archive --scheme ActionStatus-iOS --set-default --show-output --platform=iOS | xcpretty
rt export --platform=iOS
rt upload --platform=iOS

echo "**************"
echo "Uploading tvOS"
echo "**************"

rt archive --scheme ActionStatus-tvOS --set-default --show-output --platform=tvOS | xcpretty
rt export --platform=tvOS
rt upload --platform=tvOS
